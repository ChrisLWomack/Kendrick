<!doctype html>
<html>
<head>
    <title>Kendricks Biggest Bangers</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1></span>Kendrick's Vault</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->

        <h2>Add Song</h2>
      <% if (user.local.email) { %>
        <form action="/bangers" method="POST">
          <input type="text" value="<%= user.local.email %>" name="name">
          <input type="text" placeholder="song" name="song">
          <input type="text"  placeholder="embed url" name="video" >
          <button type="submit">Submit</button>
        </form>
      </div>
      <% } %>

        <div class="col-sm-6">
          <h3>Bangers</h3>
          <ul class="messages">
          <% for(var i=0; i<bangers.length; i++) {%>
            <li class="message">
              <p><%= bangers[i].name %></p>
              <p><%= bangers[i].song %></p>
              <iframe src="<%= bangers[i].video %>" width="" height=""></iframe>
              <p>
              <span><%= bangers[i].thumbUp %></span>
              <span><i class="fa fa-thumbs-up" aria-hidden="true"></i></span>
              <span><i class="fa fa-thumbs-down" aria-hidden="true"></i></span>
              <span><i class="fa fa-trash" aria-hidden="true"></i></span>
              </p>
            </li>
          <% } %>
          </ul>



</div>

<script src="main.js"></script>

</body>
</html>
